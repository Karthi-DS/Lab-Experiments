<!DOCTYPE html>
<html>
<head>
    <title>Students List</title>
</head>
<body>

<h2>Students</h2>

<a href="/students/add">Add New Student</a>

<table border="1" cellpadding="10">
    <thead>
        <tr>
            <th>Roll No</th>
            <th>Name</th>
            <th>Guardian Phone</th>
            <th>Actions</th>
        </tr>
    </thead>

    <tbody>
        <% data.forEach(student => { %>
            <tr>
                <td><%= student.rollNo %></td>
                <td><%= student.name %></td>
                <td><%= student.guardian_p_no %></td>
                <td><%= student.skills %></td>

                <td>
                    <a href="/students/edit/<%= student._id %>">Edit</a>

                    <form action="/students/delete/<%= student._id %>" method="POST" style="display:inline;">
                        <button type="submit" onclick="return confirm('Delete student?')">Delete</button>
                    </form>
                </td>
            </tr>
        <% }) %>
    </tbody>
</table>

</body>
</html>
